<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.cmu.zaman.colorintent.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:padding="20dp"
            
            >
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1. Basic Concepts" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/textView2"
                android:text="2. Color Schemes" 
                android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:gravity="center_vertical"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:text="3. Information Hierarchy" 
                android:layout_width="match_parent"
      			android:layout_height="match_parent"
      			android:gravity="center_vertical"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:gravity="center_vertical"
        		android:text="4. Color Associations" 
        		/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:onClick="startCritique"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:gravity="center_vertical"
        		android:text="5. Critique"/>
        </TableRow>
    </LinearLayout>

</RelativeLayout>

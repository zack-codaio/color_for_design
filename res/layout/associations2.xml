<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You got 5 out of 6 problems correct"
            android:id="@+id/textView8"
            android:layout_marginTop="20dp" android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:onClick="next"
            android:text="NEXT" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:background="#FA8309" android:textColor="#fff"
            android:paddingLeft="40dp" android:paddingRight="40dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Great job!"
            android:id="@+id/textView11"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" android:textSize="36dp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="
Saturation refers to how pure or intense a given hue is. Desaturating a hue will turn it into a neutral."
                    android:id="@+id/textView16" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    android:padding="20dp" android:textSize="18dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView14" android:layout_gravity="center_horizontal"
                    android:src="@drawable/saturation_group" android:adjustViewBounds="true" android:longClickable="true"
                    android:padding="10dp"/>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                <Button android:id="@+id/button" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:onClick="back" android:text="BACK"
                        android:background="#FA8309" android:textColor="#fff" android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" android:paddingRight="40dp" android:paddingLeft="40dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        />
                <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="next"
                        android:text="NEXT" android:background="#FA8309" android:textColor="#fff"
                        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        />
            </TableRow>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
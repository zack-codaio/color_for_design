<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:src="@drawable/mea_cuppa"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here's an example of a good critique:"
            android:layout_below="@+id/imageView" android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp" android:textAlignment="center" android:gravity="center_horizontal"
            android:textSize="21dp"/>
    <!--android:layout_alignLeft="@+id/textView3"-->
            <!--android:layout_below="@+id/textView5"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginTop="16dp"-->

    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:onClick="next"
            android:text="NEXT" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:background="#FA8309" android:textColor="#fff"
            android:paddingLeft="40dp" android:paddingRight="40dp"/>

</RelativeLayout>